<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MachineryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_48sdp"
                android:padding="@dimen/_14sdp"
                android:src="@drawable/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_location"
                android:fontFamily="@font/poppins_semibold"
                android:text="Machinary"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_toLeftOf="@+id/img_noti"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/icon_filter" />

            <ImageView
                android:id="@+id/img_noti"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_48sdp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/icon_search" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_6sdp"
            android:background="#F7F7F8" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app1:tabSelectedTextColor="#FF4200"
            app:tabIndicator="@drawable/tab_indicator"
            app:tabTextAppearance="@style/tab_text"
            app:tabIndicatorColor="#FF4200"
            app:tabTextColor="#606060"
            >


        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>