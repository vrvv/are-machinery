<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.OTPActivity">

    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#F7F7F8">

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_48sdp"
            android:padding="@dimen/_14sdp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_location"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add Employees"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Name"
                        android:textColor="#323C4E"
                        android:textSize="14dp" />

                    <com.are.ui.NoChangingBackgroundTextInputLayout
                        android:id="@+id/ip_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_legel_name"
                            style="@style/EditTextThemeEnquiry"
                            android:background="@drawable/rounded_black_ring"
                            android:hint="Enter your Name" />
                    </com.are.ui.NoChangingBackgroundTextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Mobile"
                        android:textColor="#323C4E"
                        android:textSize="14dp" />

                    <com.are.ui.NoChangingBackgroundTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_pan_number"
                            style="@style/EditTextThemeEnquiry"
                            android:background="@drawable/rounded_black_ring"
                            android:hint="Enter Mobile" />
                    </com.are.ui.NoChangingBackgroundTextInputLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Email"
                        android:textColor="#323C4E"
                        android:textSize="14dp" />

                    <com.are.ui.NoChangingBackgroundTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/act_company_name"
                            style="@style/EditTextThemeEnquiry"
                            android:background="@drawable/rounded_black_ring"
                            android:hint="Enter Email" />
                    </com.are.ui.NoChangingBackgroundTextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Role"
                        android:textColor="#323C4E"
                        android:textSize="14dp" />

                    <com.are.ui.NoChangingBackgroundTextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                        app:boxBackgroundMode="none"
                        app:errorEnabled="false"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_gst_no"
                            style="@style/EditTextThemeEnquiry"
                            android:background="@drawable/rounded_black_ring"
                            android:hint="Enter Role" />
                    </com.are.ui.NoChangingBackgroundTextInputLayout>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/pangram_medium"
                        android:text="Is Active?"
                        android:textColor="#323C4E"
                        android:textSize="12dp" />


                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/btn_rounded_dark_gray"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>
</LinearLayout>